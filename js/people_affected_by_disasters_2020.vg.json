{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Total People Affected By Natural Disasters in Year 2020",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "params": [
      {"name": "Year_selection",
      "value": 2020
  }
      ],
    "data": {
      "url": "https://raw.githubusercontent.com/ztan0107/FIT3179_A2/refs/heads/main/js/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/ztan0107/3179/refs/heads/main/FIT3179%20Assignment%202/data/natural-disasters.csv"
          },
          "key": "Country",
          "fields": ["Number_of_total_people_affected_by_disasters","Year"]
        }
  
      },
      {"calculate": "datum.Number_of_total_people_affected_by_disasters", "as": "People Affected Per 100,000 People"},
      {"filter":"datum.Year == Year_selection"}
  
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "People Affected Per 100,000 People",
        "type": "quantitative"
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country:"},
        {"field": "People Affected Per 100,000 People", "type": "quantitative", "title":"Peoples Affected:"}
      ]
    }
  }