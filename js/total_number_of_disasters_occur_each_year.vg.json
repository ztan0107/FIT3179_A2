{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Total Number of Disaster from 1900 till 2023" },
    "data": {
    "url": "https://raw.githubusercontent.com/ztan0107/3179/refs/heads/main/FIT3179%20Assignment%202/data/number-of-natural-disaster-events.csv"
    },
    "params": [
      {
        "name": "Entity_selection",
        "bind": {
          "input": "select",
          "options": [
            "All disasters",
            "Flood",
            "Drought",
            "Earthquake",
            "Extreme weather",
            "Extreme temperature"
          ],
          "labels":[
            "All disasters",
            "Flood",
            "Drought",
            "Earthquake",
            "Extreme weather",
            "Extreme temperature"
          ],
          "name": "Select Disaster: "
        },
        "value": "Flood"
      }],
    "transform": [
    {
      "filter": "datum.Entity == Entity_selection"
    }],
    "mark": "line",
    "encoding": {
    "x": { "field": "Year", "type": "temporal" },
    "y": { "field": "Disasters", "type": "quantitative" },
    "tooltip": [
        {"field": "Entity", "type": "nominal", "title":
        "Natural Disasters: "},
        {"field": "Disasters", 
        "type": "quantitative","format":".0f", "title": "Number of Disasters"}
]
    }
    }