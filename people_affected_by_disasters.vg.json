{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 600,
  "background": "transparent",
  "config": {
    "view": { "stroke": null },
    "axis": {
      "domain": false,
      "ticks": false,
      "labels": false
    }
  },
  "projection": { "type": "equalEarth" },
  "params": [
    {
      "name": "Year_selection",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 1900,
        "max": 2023,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ztan0107/FIT3179_A2/refs/heads/main/js/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#6e6c6c"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ztan0107/FIT3179_A2/refs/heads/main/js/ne_110m.json",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "transform": [
        {
          "calculate": "'Data is not available for ' + datum.properties.NAME + ' in ' + Year_selection",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "darkgray",
        "stroke": "navy",
        "strokeWidth": 0.5
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ztan0107/FIT3179_A2/refs/heads/main/data/natural-disasters.csv"
      },
      "transform": [
        {
          "filter": "datum.Year == Year_selection"
        },
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ztan0107/FIT3179_A2/refs/heads/main/js/ne_110m.json",
              "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
            },
            "key": "properties.NAME",
            "fields": ["type", "geometry", "properties"]
          }
        }
      ],
      "mark": { "type": "geoshape", "stroke": "navy", "strokeWidth": 0.5 },
      "encoding": {
        "shape": { "field": "geometry", "type": "geojson" },
        "color": {
          "field": "Total_number_of_people_affected_by_disasters_per_100,000",
          "type": "quantitative",
          "scale": {
            "domain": [0, 100000],
            "range": ["#FFFD8C", "#FFBB5C", "#FF9B50", "#E25E3E", "#C63D2F", "#993404"]
          },
          "title": "People Affected Per 100,000 "
        },
        "tooltip": [
          { "field": "Country", "type": "nominal", "title": "Country" },
          {
            "field": "Total_number_of_people_affected_by_disasters_per_100,000",
            "type": "quantitative",
            "title": "People Affected"
          },
          { "field": "Year", "type": "ordinal", "title": "Year" }
        ]
      }
    },
    {
      "mark": { "type": "text", "fontSize": 16, "fontWeight": "bold" },
      "encoding": {
        "x": { "value": 400 },
        "y": { "value": 30 },
        "text": { "field": "Year_selection" }
      }
    }
  ]
}